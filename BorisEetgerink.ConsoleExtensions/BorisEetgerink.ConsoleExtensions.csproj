<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Version>1.0.1</Version>
        <Authors>Boris Eetgerink</Authors>
        <Copyright>Copyright (c) Boris Eetgerink 2023</Copyright>
        <Description>Various console extensions. Currently includes ReadLine extension to enable a prompt and default input.</Description>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/boriseetgerink/ConsoleExtensions</PackageProjectUrl>
        <PackageTags>console;shell;terminal;extensions;readline;input</PackageTags>
        <PackageReleaseNotes>Initial release of ReadLine extension.</PackageReleaseNotes>
        <RepositoryUrl>https://github.com/boriseetgerink/ConsoleExtensions.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

</Project>
